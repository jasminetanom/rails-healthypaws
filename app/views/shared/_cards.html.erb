<div class="cards">
  <div class="container">
    <div class="row">
      <% if @recipes.blank? %>
       <p>No recipes to show</p>
       <% else %>
        <% @recipes.last(3).each do |recipe| %>
        <%= link_to recipe do %>
          <div class="col-xs-12 col-sm-4">
            <div class="outer-card">
              <div class="card-content">
                <h4><%= recipe.name %></h4>
                <p style="font-size: 12px">
                <% recipe.doses.each do |dose| %></p>
                  <div class="row">
                    <div class="col-md-8 text-right">
                      <%= dose.ingredient.name %>
                    </div>
                    <div class="col-md-4">
                      <%= dose.amount %>
                    </div>

                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>


