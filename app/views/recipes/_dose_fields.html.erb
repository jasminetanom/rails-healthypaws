<div class="nested-fields">

  <div class="container">
    <div class="row">
      <div class="col-sm-3">
        <%= f.input :ingredient_id, collection: Ingredient.order(:name), input_html: { class: 'ingredient_name' } %>
      </div>
      <div class="col-sm-1">
        <%= f.input :amount, label: false, placeholder: 'Amount', input_html: { class: 'ingredient_amount' } %>
      </div>
      <div class="col-sm-1">
        <%= link_to_remove_association "-", f, class: 'btn', style: 'width: 35px;' %>
      </div>
    </div>
  </div>

</div>
