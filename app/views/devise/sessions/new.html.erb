<div class="container">
  <div class="row">
  <div class="col-sm-12">
    <div class="panel">
    <div class="panel-body login-background">
      <h3><strong>LOG IN</strong></h3>
    </div>
    </div>
    </div>
  </div>
  <br>
<div class="container container-devise-form">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
    <div class='form-group'>
      <div class="boolean input optional checkbox" id="user_remember_me_input">
          <input name="user[remember_me]" type="hidden" value="0" />
          <label class=" control-label" for="user_remember_me">
              <input id="user_remember_me" name="user[remember_me]" type="checkbox" value="1" />
              Remember me
          </label>
      </div>
    </div>

    </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'btn btn-info' %>
  </div>
<% end %>

  <%= render "devise/shared/links" %>
</div>
