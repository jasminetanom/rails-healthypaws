<% content_for(:title_tag) do %>
  HealthyPaws | Your Recipe Book
<% end %>
<div class="container">
  <div class="row">
  <div class="col-sm-12">
    <div class="panel">
    <div class="panel-body recipe-book-background">
      <h3><strong>YOUR RECIPE BOOK</strong></h3>
    </div>
    </div>
    </div>
  </div>

  <div class="tabs">
    <a class="tab active" data-target="#mine">
      <h4>My Recipes</h4>
    </a>
    <a class="tab" data-target="#favorites">
      <h4>Favorited Recipes</h4>
    </a>
  </div>

    <div class="tab-content" id="mine">
      <div class="panel" id="my-recipes-section">
<!--         <div class="panel-heading">
          <h3>My Recipes</h3>
        </div> -->
        <div class="panel-body">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Recipe</th>
                <th>Calories</th>
                <th>Protein</th>
                <th>Fat</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @recipes.each do |recipe| %>
                <tr>
                  <td><%= link_to recipe.name, recipe_path(recipe) %></td>
                  <% if RecipeNutritionInfo.find_by(recipe_id: recipe.id).nil? %>
                    <td>0</td>
                    <td>0</td>
                    <td>0</td>
                  <% else %>
                    <td><%= RecipeNutritionInfo.find_by(recipe_id: recipe.id)["energy_kcal"] %></td>
                    <td><%= RecipeNutritionInfo.find_by(recipe_id: recipe.id)["protein_g"]%></td>
                    <td><%= RecipeNutritionInfo.find_by(recipe_id: recipe.id)["fat_g"]%></td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
            <div class="row-action-button">
              <a href="/recipes/new" class="btn btn-info" role="button">Create a new recipe</a>
            </div>
        </div>
      </div>
    </div>

    <div class="tab-content hidden" id="favorites">
      <div class="panel" id="favorite-recipes-section">
<!--         <div class="panel-heading">
           <h3>Favorited Recipes</h3>
        </div> -->
        <div class="panel-body">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Recipe</th>
                <th>Calories</th>
                <th>Protein</th>
                <th>Fat</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @user.favorite_recipes.each do |recipe| %>
                <tr>
                  <td><%= link_to recipe.name, recipe_path(recipe) %></td>
                  <% if RecipeNutritionInfo.find_by(recipe_id: recipe.id).nil? %>
                    <td>0</td>
                    <td>0</td>
                    <td>0</td>
                  <% else %>
                    <td><%= RecipeNutritionInfo.find_by(recipe_id: recipe.id)["energy_kcal"] %></td>
                    <td><%= RecipeNutritionInfo.find_by(recipe_id: recipe.id)["protein_g"]%></td>
                    <td><%= RecipeNutritionInfo.find_by(recipe_id: recipe.id)["fat_g"]%></td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
           <div class="row-action-button">
                  <a href="/recipes" class="btn btn-info" role="button">Find new favorite recipes</a>
            </div>
        </div>
      </div>
    </div>
</div>



