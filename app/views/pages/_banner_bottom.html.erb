
<div class="banner-bottom" style="background-image:url('http://res.cloudinary.com/tanjamiee/image/upload/v1503465692/goldie_with_humans_rjtpqp.jpg');">
  <div class="banner-bottom-content">
    <h1>Build your recipe</h1>
      <div class="banner-bottom-content-container">
        <div class="recipe-builder">
        <%= simple_form_for(@dog) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :name %>
            <%= f.input :weight %>
            <%= f.input :size, collection: ["small", "medium", "large"] %>
            <%= f.input :life_stage, collection: ["puppy", "adult", "senior"] %>
            <%= f.input :activity_level, collection: ["low", "medium", "high"] %>
            <%= f.input :is_sterilized, collection: [true, false] %>
            <%= f.input :body_condition_score, collection: ["1", "2", "3", "4", "5"] %>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
            <%= f.hidden_field :user_id, value: @user.id %>
          </div>

          <div class="form-action">
            <%= f.button :submit, "Show nutritional requirements", class: "btn btn-success btn-block"  %>
          </div>
        <% end %>

        </div>
      </div>
  </div>
</div>



